{% extends '@Admin/layout.twig' %}
{% block title %} Category Create{% endblock %}
{% block content %}
    <section class="content-header">
        <h1>
            <i class="fa fa-id-badge"></i> Category
        </h1>
        <ol class="breadcrumb">
            <li><a href="{{ path_for('dashboard') }}"><i class="fa fa-dashboard"></i> Home</a></li>
            <li><a href="{{ path_for('category.index') }}">Category</a></li>
        </ol>
    </section>
    <!-- Main content -->
    <section class="content">
        <div class="box box-info">
            <div class="box-header with-border" id="app">
                <h3 class="box-title">Create [[ message ]]</h3>
            </div>
            <!-- /.box-header -->
            <!-- form start -->
            <form method="POST" action="{{ path_for('category.create') }}" class="form-horizontal"
                  enctype="multipart/form-data">
                {{ csrf() }}
                <div class="box-body">

                    {{ flashMessage() }}

                    <div class="form-group">
                        <label for="parent_id" class="col-sm-2 control-label">Parent</label>

                        <div class="col-sm-4">
                            <select name="parent_id" id="parent_id" class="form-control select2">
                                <option value="">Select One</option>
                                {% for category in categories %}
                                    <option value="{{ category.id }}" {% if old('parent_id')== category.id %} selected {% endif %} >{{ category.title }}</option>
                                {% endfor %}
                            </select>
                            <span class="error">{{ error('parent_id')|raw }}</span>
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="Icon Image" class="col-sm-2 control-label">Image</label>

                        <div class="col-sm-4">
                            <div id="image-preview">
                                <label for="image-upload" id="image-label">Choose File</label>
                                <input type="file" name="image" id="image-upload"/>
                            </div>
                            <span class="error">{{ error('image') }}</span>
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="title" class="col-sm-2 control-label">Title<span class="required">*</span></label>

                        <div class="col-sm-10">
                            <input type="text" name="title" value="{{ old('title') }}" class="form-control" id="name"
                                   placeholder="Category Title">
                            <span class="error">{{ error('title') }}</span>
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="featured" class="col-sm-2 control-label">Is Featured</label>

                        <div class="col-sm-10">
                            <label>
                                Yes <input type="radio" name="featured"
                                           value="1" {% if old('featured')==1 %} checked {% endif %}>
                            </label>
                            <label style="padding-left:8px;">
                                No <input type="radio" name="featured"
                                          value="0" {% if old('featured')==0 %} checked {% endif %}>
                            </label>
                            <span class=" help-block error">{{ error('featured') }}</span>
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="sort_order" class="col-sm-2 control-label">Sort Order</label>

                        <div class="col-sm-10">
                            <input type="text" name="sort_order" value="{{ old('sort_order') }}" class="form-control"
                                   id="sort_order" placeholder="Sort Order">
                            <span class="error">{{ error('sort_order') }}</span>
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="editor" class="col-sm-2 control-label">Details<span
                                    class="required">*</span></label>

                        <div class="col-sm-10">
                            <textarea name="details" id="editor" rows="10"
                                      class=“form-control”>{{ old('details') }}</textarea>
                            <span class="error">{{ error('details') }}</span>
                        </div>
                    </div>

                </div>
                <!-- /.box-body -->
                <div class="box-footer">
                    <a href="{{ path_for('category.index') }}" class="btn btn-warning"><i class="fa fa-reply"></i>
                        Cancel</a>
                    <button type="submit" class="btn btn-primary"><i class="fa fa-paper-plane-o"></i> Save</button>
                </div>
                <!-- /.box-footer -->
            </form>
        </div>
    </section>
{% endblock %}
{% block scripts %}
    <script>
    </script>
{% endblock %}
